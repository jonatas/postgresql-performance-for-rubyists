# PostgreSQL Performance Workshop Environment Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
# Using TimescaleDB container on port 5433
DATABASE_URL=postgres://postgres:password@localhost:5433/mdshow

# Alternative configurations (uncomment to use):
# Standard PostgreSQL on port 5432
# DATABASE_URL=postgres://postgres:password@localhost:5432/website_tracker

# For local development without Docker
# DATABASE_URL=postgres://postgres@localhost:5432/workshop_db

# Workshop-specific settings
WORKSHOP_ENV=development
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=mdshow

# Ruby-specific settings
RUBY_ENV=development
RAILS_ENV=development

# Logging
LOG_LEVEL=info
